{
  "name": "webdriverio-tests",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@wdio/allure-reporter": "^7.24.0",
    "@wdio/cli": "^7.24.0",
    "@wdio/local-runner": "^7.24.0",
    "@wdio/mocha-framework": "^7.24.0",
    "@wdio/spec-reporter": "^7.24.0",
    "chromedriver": "^104.0.0",
    "prettier": "2.7.1",
    "wdio-chromedriver-service": "^7.3.2",
    "wdio-docker-service": "^3.2.1",
    "wdio-geckodriver-service": "^3.0.4",
    "wdio-image-comparison-service": "^4.0.0",
    "allure-commandline": "^2.18.1"
  },
  "scripts": {
    "build": "docker build -t volvoimage -f Dockerfile .",
    "run": "docker run --name volvodocker -it volvoimage",
    "clean:report": "rimraf ./allure-report && rimraf ./allure-results",
    "report:generate": "allure generate ./allure-results --clean",
    "report:run": "npm run clean:report && docker cp volvodocker:/usr/src/app/allure-report allure-report && allure open",
    "test": "npm run clean:report && wdio run wdio.conf.js",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "allure-commandline": "^2.18.1",
    "rimraf": "^3.0.2"
  }
}
